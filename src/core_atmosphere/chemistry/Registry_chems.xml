<!-- state variables for the chemical species: -->
 <var_struct name="state" time_levs="2">

      <var_array name="chems" type="real" dimensions="nVertLevels nCells Time">
           <var name="qco" array_group="gas" units="kg kg{-1}"
                description="CO -  Carbon monoxide mixing ratio"/>
      </var_array>

 </var_struct>


 <var_struct name="tend" time_levs="1">

      <var_array name="chems_tend" type="real" dimensions="nVertLevels nCells Time">
           <var name="tend_qco" name_in_code="qco" array_group="gas" units="kg m^{-3} s^{-1}"
                description="tendency of carbon monoxide mr multiplied by dry air density divied by d(zeta)/dz"/>
      </var_array>

 </var_struct>


<!-- tendencies associated with boundary layer and convective transport of chemical species: -->
 <var_struct name="tend_chems" time_levs="1">

      <var_array name="bl_chems" type="real" dimensions="nVertLevels nCells Time">
           <var name="bl_qco" array_group="gas" units="kg kg^{-1} s^{-1}"
                     description="tendency of carbon monoxide due to PBL processes"/>
      </var_array>

      <var_array name="cu_chems" type="real" dimensions="nVertLevels nCells Time">
           <var name="cu_qco" array_group="gas" units="kg kg^{-1} s^{-1}"
                     description="tendency of carbon monoxide due to convective processes"/>
      </var_array>

 </var_struct>

